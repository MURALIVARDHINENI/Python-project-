import time

def countdown_timer(seconds):
    while seconds:
        mins, secs = divmod(seconds, 60)
        timer = f'{mins:02d}:{secs:02d}'
        print(timer, end="\r")  # Prints on the same line
        time.sleep(1)
        seconds -= 1

    print("Time's up!")

# Example usage:
seconds = int(input("Enter the time in seconds: "))
countdown_timer(seconds)import time

